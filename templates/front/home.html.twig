{% extends "layout.html.twig" %}

{% block title %} Homepage {% endblock %}

{% block contenu %}
	<div class="row">
	    <div class="col-sm-9">
			<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			  <ol class="carousel-indicators">
			    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
			    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
			    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			  </ol>
			  <div class="carousel-inner">
			    <div class="carousel-item active">
			      <img class="d-block w-100" src= {{ asset('images/carousel_echelle.jpg') }} alt="First slide">
			      <div class="carousel-caption d-none d-md-block">
				    <h5>Sélection des lecteurs</h5>
				    <p>Ils vous disent tout sur les livres qu'ils ont aimé !</p>
				  </div>
			    </div>
			    <div class="carousel-item">
			      <img class="d-block w-100" src= {{ asset('images/carousel_festival_bd.jpg') }} alt="Second slide">
			      <div class="carousel-caption d-none d-md-block">
				    <h5>Festival bd</h5>
				    <p>Ouvert aux enfants de 7 à 77 ans !</p>
				  </div>
			    </div>
			    <div class="carousel-item">
			      <img class="d-block w-100" src={{ asset('images/carousel_selection_livre_ete.jpg') }} alt="Third slide">
			      <div class="carousel-caption d-none d-md-block">
				    <h5>Des livres pour cet été</h5>
				    <p>A lire sur la plage, sans modération !</p>
				  </div>
			    </div>
			  </div>
			  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
			    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
			    <span class="carousel-control-next-icon" aria-hidden="true"></span>
			    <span class="sr-only">Next</span>
			  </a>
			 </div>
		</div>
		<div class="col-sm-3">
			<p>Actualités</p>
			Créer pour cela une entité pour gérer les actualités (titre, catégorie, contenu, image)
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12">
			<h2 class="text-muted text-right">Le top des nouveautés !</h2>
  		<div class="row">
            {% for livrerecent in livresrecents %}
              <div class="col-lg-3 col-md-4 mb-4">
                <div class="card h-100">
                  {# <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a> #}
{#                   <a href="#"><img class="card-img-top" src="{{ asset('images/livres/les_miserables.jpg') }}" alt=""></a> #}
                  <a href=" {{ path('front_fiche', { 'id': livrerecent.id }) }} "><img class="card-img-top" src="{{ asset('images/livres/' ~ livrerecent.image ~'') }}" alt=""></a>
                  <div class="card-body">
                    <h4 class="card-title"><a href=" {{ path('front_fiche', { 'id': livrerecent.id }) }} ">{{ livrerecent.titre }}</a></h4>
                    <h6 class="card-subtitle mb-2 text-muted">{{ livrerecent.auteur.PrenomAuteur }} {{ livrerecent.auteur.NomAuteur }}</h6>
                    <h5>{{ livrerecent.PrixHt|number_format(2, ',', ' ') }} €</h5>
                    <p class="card-text">{{ livrerecent.Resume|truncate(100, true) }}</p>
                    <p class="card-subtitle mb-2 text-muted">Parution le {{ livrerecent.dateParution|date("d/m/Y") }}</p>
                  </div>
                  <div class="card-footer">
                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                  </div>
                </div>
              </div>
            {% endfor %}            
      </div>
      <!-- /.row -->
		</div>	
	</div>

	<div class="row">
		<div class="col-sm-12">
      <h2 class="text-muted">Nos meilleures ventes</h2>			
		</div>	
	</div>

	<div class="row">
		<div class="col-sm-12">
      <h2 class="text-muted text-right">Conseils des libraires</h2>			
		</div>	
	</div>

	<div class="row">
		<div class="col-sm-12">
      <h2 class="text-muted">Derniers avis des lecteurs</h2>			
		</div>	
	</div>



{% endblock %}